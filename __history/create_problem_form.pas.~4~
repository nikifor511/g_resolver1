unit create_problem_form;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TCreateProblemForm = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Memo1: TMemo;
    CheckBox1: TCheckBox;
    Button1: TButton;
    Button2: TButton;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  CreateProblemForm: TCreateProblemForm;

implementation

{$R *.dfm}

uses pre_form;

procedure TCreateProblemForm.Button1Click(Sender: TObject);
var res: integer;
begin
  res = pre_form.my_resolver.ask_create_problem()

end;

procedure TCreateProblemForm.Button2Click(Sender: TObject);
begin
  CreateProblemForm.Close;
end;

end.
